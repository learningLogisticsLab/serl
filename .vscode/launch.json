{
    // VSCode debug configuration version
    "version": "0.2.0",
    "configurations": [
        
        // DRQ LEARNER
        {
            // Configuration for the DRQ learner component
            "name": "Python: DRQ Learner",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/async_drq_sim/async_drq_sim.py",
            // Command-line arguments matching the learner shell script
            "args": [
                "--learner",                                // REQUIRED: Indicates this is a learner instance
                "--env", "PandaPickCubeVision-v0",               // Environment to use
                "--exp_name", "PandaPickCubeVision-v0-drq-baselines", // Experiment name for wandb logging
                "--seed", "0",                              // Random seed for reproducibility
                "--training_starts", "1_000",               // Start training after buffer has this many samples
                "--max_steps", "50_000",                    // Maximum training steps
                "--critic_actor_ratio", "4",                // Critic-to-actor update ratio (4 for DRQ)
                "--encoder_type", "resnet-pretrained",      // Use pretrained ResNet encoder
                "--demo_path", "${workspaceFolder}/examples/async_drq_sim/pick-demo.pkl" // Demo data path
                // Note: --debug flag commented out (wandb is disabled when debug is enabled)
            ],
            "console": "integratedTerminal",                // Use integrated terminal to see output
            "justMyCode": false,                            // Allow stepping into libraries
            // Environment variables from shell script
            "env": {
                "XLA_PYTHON_CLIENT_PREALLOCATE": "false",   // Don't preallocate JAX/XLA memory
                "XLA_PYTHON_CLIENT_MEM_FRACTION": ".5"      // Limit JAX memory usage to 50%
            },
            // Additional helpful debugging options
            "showReturnValue": true,                        // Show function return values
            "purpose": ["debug-in-terminal"],               // Run in terminal for better output
            "cwd": "${workspaceFolder}"                     // Set working directory explicitly
        },

        // DRQ ACTOR
        {
            // Configuration for the DRQ actor component
            "name": "Python: DRQ Actor",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/async_drq_sim/async_drq_sim.py",
            // Command-line arguments matching the actor shell script
            "args": [
                "--actor",                                  // REQUIRED: Indicates this is an actor instance
                "--env", "PandaPickCubeVision-v0",               // Environment to use
                "--render",                                 // Enable rendering
                "--exp_name", "PandaPickCubeVision-v0-drq-baselines", // Experiment name for wandb logging
                "--seed", "0",                              // Random seed for reproducibility
                "--random_steps", "1000",                   // Number of random steps at beginning
                "--max_steps", "50_000",                    // Maximum training steps
                "--encoder_type", "resnet-pretrained"       // Use pretrained ResNet encoder
                // Note: --debug flag commented out
            ],
            "console": "integratedTerminal",                // Use integrated terminal to see output
            "justMyCode": false,                            // Allow stepping into libraries
            // Environment variables from shell script
            "env": {
                "XLA_PYTHON_CLIENT_PREALLOCATE": "false",   // Don't preallocate JAX/XLA memory
                "XLA_PYTHON_CLIENT_MEM_FRACTION": ".5"      // Limit JAX memory usage to 50%
            },
            "showReturnValue": true,                        // Show function return values
            "purpose": ["debug-in-terminal"],               // Run in terminal for better output
            "cwd": "${workspaceFolder}"                     // Set working directory explicitly
        },

    ],

    // Compound configurations to launch multiple configurations together
    "compounds": [
        {
            // Launch both DRQ learner and actor at the same time
            "name": "DRQ Learner + Actor",
            "configurations": ["Python: DRQ Learner", "Python: DRQ Actor"]
        },
    ],

}